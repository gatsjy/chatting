{{>layout/header}}

<h1>회원 정보 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title"> 아이디 </label>
                <input type="text" class="form-control" id="userId" value="{{user.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title"> 이름 </label>
                <input type="text" class="form-control" id="name" value="{{user.name}}" readonly>
            </div>
            <div class="form-group">
                <label for="title"> 이메일 </label>
                <input type="text" class="form-control" id="email" value="{{user.email}}" readonly>
            </div>
            <div class="form-group">
                <label for="title"> ROLE </label>
                <button type="button" class="btn btn-primary" id="btn-user-upgrade"> 등업 </button>
                <input type="text" class="form-control" id="uerRole" value="{{user.role}}" readonly>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
    </div>
</div>

{{>layout/footer}}